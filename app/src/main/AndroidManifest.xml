<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.github.bonbast">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVEY" />

    <application
        android:name=".SarrafiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.samsung.android.cocktail.v2.action.COCKTAIL_UPDATE" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainTabActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.DetailActivity" />
        <activity android:name=".activity.EditFavoriteListActivity" />
        <activity
            android:name=".activity.CalculatorActivity"
            android:configChanges="screenLayout|orientation|screenSize" />
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/settings"
            android:theme="@style/PreferenceScreen" />
        <activity
            android:name=".activity.AboutActivity"
            android:theme="@style/AppTheme.MaterialAboutActivity" />

        <!-- Edge Panel (Galaxy Edge) -->
        <receiver
            android:name=".edge.EdgePlusList"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.samsung.android.cocktail.v2.action.COCKTAIL_UPDATE" />
                <action android:name="com.github.bonbast.action.ACTION_PULL_TO_REFRESH" />
            </intent-filter>

            <meta-data
                android:name="com.samsung.android.cocktail.provider"
                android:resource="@xml/edge_single_plus_list" />
        </receiver>

        <service
            android:name=".edge.PriceListAdapterService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <meta-data
            android:name="com.samsung.android.cocktail.mode"
            android:value="edge_single_plus" />

        <!-- Widget-->
        <receiver
            android:name=".widget.SymbolWidget"
            android:label="@string/symbol">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.github.bonbast.widget.SymbolWidget.REFRESH" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/symbol_widget_info" />
        </receiver>

    </application>

</manifest>